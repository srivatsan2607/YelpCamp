<%- include("../partials/header") %>

<div class="container">
	<div class="formBox">
		<h4>
			Edit <%= campground.name%> campground
		</h4>
		<form action="/campgrounds/<%=campground._id %>?_method=PUT" method="POST">
			<div class="form-group">
				Name <input class="form-control" type="text" name="camp[name]" value="<%= campground.name%>">
			</div>
			<div class="form-group">
				Price <input class="form-control" type="number" name="camp[price]" value="<%= campground.price %>"
					min=100 step=25>
			</div>
			<div class="form-group">
				Location <input class="form-control" type="text" name="camp[location]"
					value="<%= campground.location%>">
			</div>
			<div class="form-group">
				Image Url <input class="form-control" type="text" name="camp[image]" value="<%= campground.image%>">
			</div>
			<div class="form-group">
				Description <textarea class="form-control" type="text"
					name="camp[description]"><%= campground.description%></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" type="submit">
					Update
				</button>
			</div>
		</form>
		<a href="/campgrounds">Back</a>
	</div>
</div>

<%- include("../partials/footer") %>