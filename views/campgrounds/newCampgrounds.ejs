<%- include("../partials/header") %>

<div class="container">
	<h1 style="text-align:center">
		Create a new cAmpground
	</h1>
	<div class="formBox">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text" name="camp[name]" placeholder="Name">
			</div>
			<div class="form-group">
				<input class="form-control" type="number" name="camp[price]" placeholder="Price" min=100 step=25>
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="camp[image]" placeholder="Image Url">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name="camp[location]" placeholder="Location address">
			</div>
			<div class="form-group">
				<textarea class="form-control" type="text" name="camp[description]"
					placeholder="Description"></textarea>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" type="submit">
					Submit
				</button>
			</div>
		</form>
		<a href="/campgrounds">Back</a>
	</div>
</div>

<%- include("../partials/footer") %>